{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "src",
    "strict": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "target": "es2020",
    "moduleResolution": "node",
    // Enables compatibility between CommonJS and ES Modules (import/export)
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "allowJs": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "paths": {
      "src/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "src"
  ]
}
